<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:padding="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayoutMain"
    android:background="#26273D">
    
<!-- ESTUDO SQLITE 
    https://www.macoratti.net/16/08/xamand_crud1.htm
    https://www.macoratti.net/16/08/xamand_crud2.htm
-->   
    <LinearLayout
        android:orientation="vertical"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/label_nome_login"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"           
            android:background="@drawable/shapeedittext"
            android:id="@+id/linearLayoutUser">
            <ImageView
                android:layout_width="30dp"
                android:layout_marginLeft="10dp"
                android:layout_height="match_parent"
                android:src="@drawable/usuarios"
                android:contentDescription="@imagemUser"
                android:id="@+id/imgLogoUser"/>
            <EditText
                android:inputType="textPersonName"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:layout_height="match_parent"
                android:id="@+id/edUser"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/shapeedittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:id="@+id/linearLayoutPassword">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:src="@drawable/senha"
                android:contentDescription="@imagemPassword"
                android:id="@+id/imgPassword"/>
            <EditText
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:layout_height="match_parent"
                android:id="@+id/edPassword"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <CheckBox
                android:text="@string/text_checkbox_lembre_de_min"
                android:layout_width="wrap_content"
                android:textColor="#fff"
                android:layout_height="wrap_content"
                android:id="@+id/checkLembreDeMin" />
            <TextView
                android:gravity="center_vertical"
                android:textAlignment="textEnd"
                android:textColor="#E5445A"
                android:layout_marginRight="7dp"
                android:text="@string/label_esqueci_senha"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>      

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="43dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:gravity="center"
            android:id="@+id/btEntrar"
            android:background="@drawable/shape_button">
            <TextView
                android:text="@string/description_bt_entrar"
                android:layout_width="match_parent"
                android:textColor="#fff"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
     
</LinearLayout>