<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutProdutosDoDocumento">
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Separação Fracionada"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_info_documentos"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_height="30dp"
        android:background="#D1D1D1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="@string/filial"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/filial_codigo"
            android:textStyle="bold"
            android:id="@+id/separacao_fracionada_informe_endereco_referencia_filial"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>   
        <TextView
            android:text="Etiqueta"
            android:layout_marginLeft="7dp"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="9999999955"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"        
            android:id="@+id/separacao_fracionada_informe_endereco_referencia_etiqueta"
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>   
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:background="@drawable/shape_endereco_referencia"
        android:layout_below="@+id/layout_info_documentos"
        android:layout_width="match_parent"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/layout_descricao_lista_produtos"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/separacao_fracionada_lista_produtos_separados_usuario"
            android:gravity="center"
            android:text="Informe um endereço de referência"
            android:layout_width="wrap_content"
            android:textSize="14dp"            
            android:textStyle="bold"
            android:textColor="@color/cor_fonte"
            android:layout_height="wrap_content"/>        
    </LinearLayout>
    <LinearLayout
        android:layout_above="@+id/layout_rodape"
        android:layout_below="@+id/layout_descricao_lista_produtos"        
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText        
            android:gravity="center"
            android:inputType="number"
            android:textStyle="bold"
            android:id="@+id/separacao_fracionada_informe_endereco_referencia_edit_endereco"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:hint="Leia um Endereço"
            android:backgroundTint="@color/color_tint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/voltar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/separacao_fracionada_lista_produtos_separados_botao_voltar"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>    
    </LinearLayout>
</RelativeLayout>