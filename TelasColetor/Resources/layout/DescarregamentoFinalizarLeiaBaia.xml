<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutProdutosDoDocumento">
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Finalizar Descarregamento"/>
    </LinearLayout>     
    <RelativeLayout
        android:id="@+id/descarregamento_finaliza_leia_baia_relatyve_center"
        android:layout_above="@+id/layout_rodape"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="match_parent">               
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:id="@+id/descarregamento_finaliza_leia_baia_informacoes_carga" 
            android:layout_margin="5dp"
            android:background="@drawable/shape_finalizar_descarregamento_leia_baia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout        
                android:orientation="horizontal"
                android:gravity="center"  
                android:background="@drawable/separar_palete_etiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">                
                <TextView
                    android:text="Informações da Carga"
                    android:gravity="center"            
                    android:textSize="17dp"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"/>
            </LinearLayout>        
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Carga:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:text="00049385"
                        android:textSize="14dp"
                        android:id="@+id/editText_produto_codigo"
                        android:textStyle="bold"
                        android:inputType="number"
                        android:enabled="false"
                        android:textColor="#000"
                        android:backgroundTint="#636363"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginTop="-8dp"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Placa:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:text="AAF4819"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:enabled="false"
                        android:textColor="#000"
                        android:backgroundTint="#636363"
                        android:id="@+id/editText_produto_referencia"
                        android:inputType="number"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginTop="-8dp"
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Data:"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <EditText
                        android:text="03/12/2021"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:enabled="false"
                        android:textColor="#000"
                        android:backgroundTint="#636363"
                        android:inputType="number"
                        android:id="@+id/editText_produto_qtd_embalagem"
                        android:layout_marginLeft="-3dp"
                        android:layout_marginTop="-8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>            
        </LinearLayout>
        <EditText
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/descarregamento_finaliza_leia_baia_leia_uma_baia"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:hint="Leia uma Baia"
            android:backgroundTint="@color/color_tint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>       
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/botao_sair"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/descarregamento_finaliza_leia_baia_botao_sair"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>  
        <Button
            android:text="@string/text_botao_confirmar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/descarregamento_finaliza_leia_baia_botao_confirmar"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>  
    </LinearLayout>
</RelativeLayout>