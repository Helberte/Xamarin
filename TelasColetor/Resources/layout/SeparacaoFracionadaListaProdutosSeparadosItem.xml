<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frameLayoutProdutosDocumentoItem">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:id="@+id/layout_produtos_documento_item">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/shape_card_documentos"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/cor_fonte"
                android:id="@+id/separacao_fracionada_lista_produtos_separados_descricao"
                android:text="MOLHO TOM QUERO TRADICIONAL 300 G"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp">
                <LinearLayout
                    android:id="@+id/separacao_fracionada_lista_produtos_separados_container_esquerda"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_toLeftOf="@+id/view_separadora"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Código:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="13732196"
                            android:textStyle="bold"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_codigo"
                            android:textSize="15dp"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Qtd. Embalagem:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="10"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_quantidade_embalagem"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Ean:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="7896419421023"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_ean"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Qtd. Unidade:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="1"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_quantidade_unidade"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="6dp"
                    android:id="@+id/view_separadora"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/separacao_fracionada_lista_produtos_separados_container_direita"
                    android:orientation="vertical"
                    android:layout_toRightOf="@+id/view_separadora"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Referência:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="ANF01L"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_referencia"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Status:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="Separado"
                            android:textStyle="bold"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_status"
                            android:textSize="15dp"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Dun:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="07896419421115"
                            android:textStyle="bold"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_dun"
                            android:textSize="13dp"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:text="Qtd. Caixa:"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:text="0,1"
                            android:textStyle="bold"
                            android:textSize="15dp"
                            android:id="@+id/separacao_fracionada_lista_produtos_separados_caixa"
                            android:textColor="@color/cor_fonte"
                            android:textAlignment="textEnd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>                        
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>            
    </LinearLayout>
</FrameLayout>