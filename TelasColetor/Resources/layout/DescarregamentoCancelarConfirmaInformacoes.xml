<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutProdutosDoDocumento">
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Cancelar Descarregamento"/>
    </LinearLayout>   
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/layout_cabecalho"
        android:id="@+id/linearLayout_etiqueta" 
        android:layout_margin="5dp"
        android:background="@drawable/shape_finalizar_descarregamento_leia_baia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout        
            android:orientation="vertical"
            android:gravity="center"  
            android:background="@drawable/separar_palete_etiqueta_bloquear"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Confirme estas informações"
                android:gravity="center"  
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:textSize="17dp"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>            
        </LinearLayout>        
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="60dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Baia:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="28"
                    android:textSize="14dp"
                    android:id="@+id/descarregamento_cancelar_confirma_informacoes_baia"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:clickable="false"
                    android:editable="false"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Carga:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="00059425"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:id="@+id/descarregamento_cancelar_confirma_informacoes_carga"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout> 
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Data:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="06/03/2023 13:46"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:id="@+id/descarregamento_cancelar_confirma_informacoes_data"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout> 
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Status:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="AGUARDANDO"
                    android:textSize="12dp"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:textStyle="bold"
                    android:id="@+id/descarregamento_cancelar_confirma_informacoes_status"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>            
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">                
                <TextView
                    android:text="Descrição:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="@drawable/shape_descricao_cancela_descarga"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="7dp"
                    android:orientation="vertical"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">
                    <TextView
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:id="@+id/descarregamento_cancelar_confirma_informacoes_descricao"
                        android:textColor="@color/cor_fonte"
                        android:text="CARGA TESTE DO BELTRANO DE SOUZA COSTA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>            
        </LinearLayout>
    </LinearLayout> 
    <TextView
        android:layout_below="@+id/linearLayout_etiqueta"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="@color/cor_fonte"
        android:padding="15dp"
        android:gravity="center"
        android:text="DESEJA CANCELAR ESTE DESCARREGAMENTO?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/voltar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/descarregamento_cancelar_confirma_informacoes_botao_voltar"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>  
        <Button
            android:text="@string/text_botao_confirmar"
            android:textColor="@color/cor_fonte"
            android:id="@+id/descarregamento_cancelar_confirma_informacoes_botao_confirmar"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>   
    </LinearLayout>
</RelativeLayout>