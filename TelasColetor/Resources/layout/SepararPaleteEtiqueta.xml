<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSepararPaleteEtiqueta" >
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="@string/separar_palete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_info_documentos"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_height="30dp"
        android:background="#D1D1D1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="@string/filial"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/filial_codigo"
            android:textStyle="bold"
            android:id="@+id/textView_filial"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/text_data"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/text_data_extenso"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:id="@+id/textView_data"
            android:textStyle="bold"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/layout_info_documentos"
        android:id="@+id/linearLayout_etiqueta" 
        android:layout_margin="5dp"
        android:background="@drawable/shape_separar_palete_etiqueta_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout        
            android:orientation="horizontal"
            android:gravity="center"  
            android:background="@drawable/separar_palete_etiqueta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Etiqueta"
                android:gravity="center"            
                android:textSize="17dp"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
            <TextView
                android:text="02361041"
                android:layout_marginLeft="5dp"
                android:id="@+id/textView_produto_etiqueta"
                android:gravity="center"
                android:textSize="17dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:text="MOLHO TOM QUERO TRADICIONAL"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:id="@+id/textView_produto_descricao"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textStyle="bold"
            android:textColor="@color/cor_fonte"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Código:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="08682734"
                    android:textSize="12dp"
                    android:id="@+id/editText_produto_codigo"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Referência:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="78961025018"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:id="@+id/editText_produto_referencia"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Qtd. Embalagem:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="24"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:id="@+id/editText_produto_qtd_embalagem"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Lote:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="SL"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:id="@+id/editText_produto_lote"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Validade:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="01/03/2024"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:id="@+id/editText_produto_validade"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Endereço:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="01-30-03-0002"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:id="@+id/editText_produto_endereco"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_above="@+id/layout_rodape"
        android:layout_marginLeft="4dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="@string/hint_leia_endereco"
        android:layout_marginRight="4dp"
        android:inputType="number"
        android:id="@+id/editText_leia_endereco"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/voltar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>    
        <Button
            android:text="@string/text_bloquear"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/bt_bloquear"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>    
    </LinearLayout>

</RelativeLayout>