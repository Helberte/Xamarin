<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSepararPaleteEtiqueta" >
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="@string/separar_palete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_info_documentos"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_height="30dp"
        android:background="#D1D1D1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Endereço"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="03-28-01-0001"
            android:textStyle="bold"
            android:id="@+id/separacao_fracionada_leia_item_endereco"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>        
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/layout_info_documentos"
        android:id="@+id/separacao_fracionada_leia_item_swuit"
        android:layout_width="match_parent"
        android:gravity="end"        
        android:paddingRight="5dp"
        android:layout_height="wrap_content">
        <Switch
            android:text="Leitura por Caixa   "
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>        
    <EditText
        android:inputType="number"
        android:layout_below="@+id/separacao_fracionada_leia_item_swuit"
        android:hint="Leia um item"
        android:layout_marginRight="4dp"
        android:id="@+id/separacao_fracionada_leia_item_edit_leia_item"
        android:layout_marginLeft="4dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/separacao_fracionada_leia_item_edit_leia_item"
        android:id="@+id/linearLayout_etiqueta" 
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="#E8E8E8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout        
            android:orientation="horizontal"
            android:gravity="center"  
            android:background="@android:color/transparent"            
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Última Leitura"
                android:gravity="center"            
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#274939"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>            
        </LinearLayout>
        <EditText
            android:layout_marginTop="-10dp"
            android:textSize="12dp"
            android:textStyle="bold"
            android:enabled="false"
            android:id="@+id/separacao_fracionada_leia_item_descricao"
            android:textColor="#000"
            android:backgroundTint="#636363"
            android:text="MOLHO TOM QUERO TRADICIONAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"   
            android:paddingLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Código:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="08682734"
                    android:textSize="12dp"
                    android:id="@+id/separacao_fracionada_leia_item_codigo"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="67dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Referência:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="78961025018"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:id="@+id/separacao_fracionada_leia_item_referencia"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Qtd. Embalagem:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="24"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:id="@+id/separacao_fracionada_leia_item_qtd_embalagem"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"           
            android:paddingLeft="2dp" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">        
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="50dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Lote:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="SL"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:id="@+id/separacao_fracionada_leia_item_lote"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Validade:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="08/08/2023"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:id="@+id/separacao_fracionada_leia_item_validade"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Cod. Barras:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="7896419421023"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:id="@+id/separacao_fracionada_leia_item_cod_barras"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>        
    </LinearLayout>        
    <RelativeLayout
        android:layout_below="@+id/linearLayout_etiqueta"        
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/separacao_fracionada_leia_item_relative_quantidades"
        android:layout_width="match_parent"
        android:layout_height="120dp">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/separacao_fracionada_leia_item_quantidade_separada"
            android:layout_toLeftOf="@+id/separacao_fracionada_leia_item_base_center"
            android:background="#D3F1DA"
            android:padding="8dp"            
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Qtd.: Separada"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/cor_fonte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Unidades:"
                    android:textSize="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="1"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="4dp"
                    android:id="@+id/separacao_fracionada_leia_item_unidades"
                    android:textStyle="bold"
                    android:textColor="@color/cor_fonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Caixas:"
                    android:textSize="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="0,1"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="4dp"
                    android:id="@+id/separacao_fracionada_leia_item_caixas"
                    android:textStyle="bold"
                    android:textColor="@color/cor_fonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/separacao_fracionada_leia_item_base_center"
            android:layout_centerHorizontal="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/separacao_fracionada_leia_item_quantidade_pendente"
            android:layout_toRightOf="@+id/separacao_fracionada_leia_item_base_center"
            android:background="#F1DFCE"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Qtd.: Pendente"
                android:textStyle="bold"
                android:textSize="15dp"
                android:textColor="@color/cor_fonte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="7dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Unidades:"
                    android:textSize="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="79"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="4dp"
                    android:id="@+id/separacao_fracionada_leia_item_unidades_pendentes"
                    android:textStyle="bold"
                    android:textColor="@color/cor_fonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Caixas:"
                    android:textSize="15dp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="7,9"
                    android:textSize="18dp"
                    android:textAlignment="textEnd"
                    android:layout_marginTop="4dp"
                    android:textStyle="bold"
                    android:id="@+id/separacao_fracionada_leia_item_caixas_pendentes"
                    android:textColor="@color/cor_fonte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/voltar"
            android:textColor="@color/cor_fonte"
            android:id="@+id/separacao_fracionada_leia_item_botao_voltar"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>  
        <Button
            android:text="@string/botao_mais_opcoes"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/separacao_fracionada_leia_item_botao_mais_opcoes"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>  
        <Button
            android:text="Paletizar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/separacao_fracionada_leia_item_botao_paletizar"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>  
    </LinearLayout>
</RelativeLayout>