<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutProdutosDoDocumento">
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="Consultar Produto Em ConferÃªncia"/>
    </LinearLayout>    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/layout_descricao_lista_produtos"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/textview_documentos"
            android:gravity="center"
            android:text="Lista de Baias"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/cor_fonte"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ListView
        android:layout_above="@+id/descarregamento_lista_de_baias_placa_leia_endereco"
        android:layout_below="@+id/layout_descricao_lista_produtos"
        android:layout_width="match_parent"
        android:divider="@android:color/transparent"
        android:layout_margin="5dp"        
        android:layout_height="match_parent"
        android:id="@+id/descarregamento_consultar_produto_lista_baias_listview"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_above="@+id/layout_rodape"
        android:layout_marginLeft="4dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="@string/hint_leia_baia"
        android:layout_marginRight="4dp"
        android:inputType="number"
        android:id="@+id/descarregamento_lista_de_baias_placa_leia_endereco"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/voltar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/descarregamento_consultar_produto_lista_baias_botao_voltar"
            android:textStyle="bold"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>       
    </LinearLayout>
</RelativeLayout>