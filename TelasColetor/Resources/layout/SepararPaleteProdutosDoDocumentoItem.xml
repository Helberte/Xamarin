<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frameLayoutProdutosDocumentoItem">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:padding="2dp"
        android:id="@+id/layout_produtos_documento_item">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="5dp"
            android:background="@drawable/shape_card_documentos"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:textColor="@color/cor_fonte"
                android:id="@+id/textView_descricao_produto"
                android:text="MOLHO TOM QUERO TRADICIONAL 300 G"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:background="@android:color/transparent"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Etiqueta:"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="02361041"
                    android:id="@+id/textView_numero_etiqueta"
                    android:textColor="@color/cor_fonte"
                    android:layout_marginLeft="3dp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pendente:"
                    android:layout_marginLeft="4dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:background="@android:color/transparent"
                    android:orientation="horizontal"
                    android:gravity="end"                    
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@drawable/shape_produtos_documento_item"
                        android:orientation="horizontal"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="35"
                            android:textColor="@color/cor_fonte"
                            android:id="@+id/textView_caixas_pendentes"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Caixas"
                            android:layout_marginLeft="3dp"
                            android:textColor="@color/cor_fonte"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="#9698A1"/>
        <LinearLayout
            android:background="#C5C8D3"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:text="Rua:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="01"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/textView_localizacao_rua"
                android:textColor="@color/cor_fonte"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Prédio:"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="30"
                android:textStyle="bold"
                android:id="@+id/textView_localizacao_predio"
                android:textSize="17dp"
                android:textColor="@color/cor_fonte"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Andar:"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="03"
                android:textStyle="bold"
                android:textSize="17dp"
                android:textColor="@color/cor_fonte"
                android:layout_marginLeft="3dp"
                android:id="@+id/textView_localizacao_andar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="Posição:"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="0002"
                android:textStyle="bold"
                android:textSize="17dp"
                android:id="@+id/textView_localizacao_posicao"
                android:textColor="@color/cor_fonte"
                android:layout_marginLeft="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>