<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutProdutosDoDocumento">
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="@string/separar_palete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_info_documentos"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_height="30dp"
        android:background="#D1D1D1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="@string/filial"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/filial_codigo"
            android:textStyle="bold"
            android:id="@+id/textView_filial"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/text_data"
            android:paddingLeft="5dp"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/text_data_extenso"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:id="@+id/textView_data"
            android:textStyle="bold"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_below="@+id/layout_info_documentos"
        android:layout_width="match_parent"
        android:gravity="center"
        android:id="@+id/layout_descricao_lista_produtos"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/textview_documentos"
            android:gravity="center"
            android:text="@string/text_documentos_produtos"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/cor_fonte"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/textview_documentos_numero"
            android:gravity="center"
            android:text="@string/text_numero_documento"
            android:layout_width="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:textColor="@color/cor_fonte"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/layout_descricao_lista_produtos"
        android:layout_above="@+id/editText_leia_endereco"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/recyclerView_documentos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_above="@+id/layout_rodape"
        android:layout_marginLeft="4dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:hint="@string/hint_leia_endereco"
        android:layout_marginRight="4dp"
        android:inputType="number"
        android:id="@+id/editText_leia_endereco"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/voltar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:textStyle="bold"
            android:id="@+id/separar_palete_produtos_documento_botao_voltar"
            android:layout_width="100dp"
            android:layout_height="match_parent"/>       
    </LinearLayout>
</RelativeLayout>