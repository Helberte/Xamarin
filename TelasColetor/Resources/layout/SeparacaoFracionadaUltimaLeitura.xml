<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"     
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayoutSepararPaleteEtiqueta" >
    <LinearLayout
        android:background="@color/cor_tema"
        android:id="@+id/layout_cabecalho"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="17dp"
            android:text="@string/separar_palete"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout_info_documentos"
        android:layout_below="@+id/layout_cabecalho"
        android:layout_height="30dp"
        android:background="#D1D1D1"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:text="Filial"
            android:textSize="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="F27"
            android:textStyle="bold"
            android:id="@+id/separacao_fracionada_ultima_leitura_filial"
            android:layout_marginLeft="5dp"            
            android:textSize="16dp"
            android:textColor="@color/cor_fonte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>        
    </LinearLayout>     
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@+id/layout_info_documentos"
        android:id="@+id/linearLayout_etiqueta" 
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_marginTop="35dp"
        android:background="#E8E8E8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout        
            android:orientation="horizontal"
            android:gravity="center"  
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="Última Leitura"
                android:gravity="center"            
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#274939"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>            
        </LinearLayout>
        <EditText
            android:layout_marginTop="-10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:enabled="false"
            android:id="@+id/separacao_fracionada_ultima_leitura_descricao"
            android:textColor="#000"
            android:backgroundTint="#636363"
            android:text="MOLHO TOM QUERO TRADICIONAL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"   
            android:paddingLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Código:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="08682734"
                    android:textSize="14dp"
                    android:id="@+id/separacao_fracionada_ultima_leitura_codigo"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="78dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Referência:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="78961025018"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:id="@+id/separacao_fracionada_ultima_leitura_referencia"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="104dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Qtd. Embalagem:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="24"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:id="@+id/separacao_fracionada_ultima_leitura_qtd_embalagem"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"           
            android:paddingLeft="2dp" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">        
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="115dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Cod. Barras Und:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="0000000000000"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:id="@+id/separacao_fracionada_ultima_leitura_cod_barras_unidade"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Cod. Barras Caixa:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="7896419421023"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/separacao_fracionada_ultima_leitura_cod_barras_caixa"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout> 
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"           
            android:paddingLeft="2dp" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">        
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="165dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Separado por:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="64429-HELBERTE"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Data Leitura:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="06/04/2023"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/separacao_fracionada_ultima_leitura_data_leitura"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout> 
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="-3dp"           
            android:paddingLeft="2dp" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">        
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Qtd. Unidade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="1"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/separacao_fracionada_ultima_leitura_unidade"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>            
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="90dp"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Qtd. Caixa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="0,1"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:enabled="false"
                    android:textColor="#000"
                    android:id="@+id/separacao_fracionada_ultima_leitura_caixa"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Validade:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <EditText
                    android:text="01/01/2024"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:id="@+id/separacao_fracionada_ultima_leitura_validade"
                    android:enabled="false"
                    android:textColor="#000"
                    android:backgroundTint="#636363"
                    android:inputType="number"
                    android:layout_marginLeft="-3dp"
                    android:layout_marginTop="-8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>     
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_rodape"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <Button
            android:text="@string/botao_sair"
            android:textColor="@color/cor_fonte"
            android:id="@+id/separacao_fracionada_ultima_leitura_botao_sair"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>  
        <Button
            android:text="@string/text_botao_confirmar"
            android:textColor="@color/cor_fonte"
            android:textSize="12dp"
            android:id="@+id/separacao_fracionada_ultima_leitura_botao_confirmar"
            android:textStyle="bold"
            android:layout_marginRight="5dp"
            android:layout_width="120dp"
            android:layout_height="match_parent"/>         
    </LinearLayout>
</RelativeLayout>